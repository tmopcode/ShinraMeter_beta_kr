<UserControl x:Class="DamageMeter.UI.PlayerStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:DamageMeter.UI"
             mc:Ignorable="d"
             d:DesignHeight="29"
             MinHeight="29"
             Focusable="False"
             MaxHeight="29"
             Height="29" >
    <Grid Focusable="False" HorizontalAlignment="Stretch">
        <Grid.Resources>
            <Style x:Key="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Label">
                            <Border>
                                <ContentPresenter
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                    RecognizesAccessKey="False" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Border Focusable="False" PreviewMouseRightButtonDown="ShowSkills" MouseLeftButtonDown="DragWindow"
                   x:Name="DpsIndicator"
                    Opacity="1" HorizontalAlignment="Left" Height="Auto" Margin="0,0,0,1"
                   VerticalAlignment="Stretch"
                   Width="0" BorderThickness="0 0 0 2" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0 1">
                    <GradientStop/>
                    <GradientStop/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.LayoutTransform>
                <ScaleTransform ScaleY="1"/>
            </Border.LayoutTransform>
        </Border>

        <Grid Focusable="False" PreviewMouseRightButtonDown="ShowSkills" MouseLeftButtonDown="DragWindow"
              x:Name="GridStats" HorizontalAlignment="Center" Width="Auto" MouseEnter="GridStats_MouseEnter" MouseLeave="GridStats_MouseLeave"
              VerticalAlignment="Top" Height="29" MinHeight="29" MaxHeight="29">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="p0" Width="25" />
                <ColumnDefinition SharedSizeGroup="p01" Width="13" />
                <ColumnDefinition SharedSizeGroup="p1" MinWidth="90" Width="Auto" />
                <ColumnDefinition SharedSizeGroup="p2" Width="*" />
                <ColumnDefinition SharedSizeGroup="p3" MinWidth="45" Width="Auto" />
                <ColumnDefinition SharedSizeGroup="p4" MinWidth="60" Width="Auto" />
                <ColumnDefinition SharedSizeGroup="p5" MinWidth="45" Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image PreviewMouseRightButtonDown="ShowSkills" MouseLeftButtonDown="DragWindow" x:Name="Class"
                   Focusable="False" Grid.Column="0" RenderOptions.BitmapScalingMode="HighQuality"
                   Source="{Binding Image}" Stretch="Fill" HorizontalAlignment="Left" 
                   Height="25" VerticalAlignment="Top" Width="25" Margin="2,0,0,0" />

            <Label Focusable="False" Grid.Column="1" FontSize="11" Margin="0 0 -3 0" VerticalAlignment="Top"
                   HorizontalContentAlignment="Center" HorizontalAlignment="Center" 
                   x:Name="LabelLevel" Foreground="#cccccc"
                   MinHeight="29" />
            <Label Focusable="False" Grid.Column="2" FontSize="14" VerticalAlignment="Center"
                   HorizontalContentAlignment="Left" Margin="2 0"
                   x:Name="LabelName" Foreground="GreenYellow"
                   HorizontalAlignment="Left"
                   MinHeight="29">
                <Label.Style>
                    <Style TargetType="{x:Type Label}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type l:MainWindow}}, Path=DataContext.(l:MainViewModel.BlurPlayerNames)}" Value="True">
                                <!-- Add the BlurEffect -->
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <BlurEffect x:Name="blurEffect" Radius="7" KernelType="Box"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type l:MainWindow}}, Path=DataContext.(l:MainViewModel.BlurPlayerNames)}" Value="False">
                                <!-- Remove the BlurEffect -->
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <Label Focusable="False" Grid.Column="3" FontSize="14" VerticalAlignment="Center"
                   HorizontalContentAlignment="Center"
                   x:Name="Spacer" Foreground="GreenYellow"
                   MinHeight="29" />
            <Label Focusable="False" Grid.Column="4" FontSize="14" x:Name="LabelDamagePart"
                   HorizontalContentAlignment="Center"
                   VerticalAlignment="Center" Foreground="White"
                   MinHeight="29" />
            <Label Focusable="False" Grid.Column="5" FontSize="14" x:Name="LabelDps"
                   HorizontalContentAlignment="Center"
                   VerticalAlignment="Center" Foreground="White"
                   MinHeight="29" />

            <Label Focusable="False" Grid.Column="6" FontSize="14" x:Name="LabelCritRate"
                   HorizontalContentAlignment="Right" Margin="0,0,3,0"
                   VerticalAlignment="Center" Foreground="LightCoral" PreviewMouseLeftButtonDown="ChangeHeal"
                   MinHeight="25" />

        </Grid>

    </Grid>
</UserControl>